				{
					"name": "Generate Download URL",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response contains download URL', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('downloadUrl');",
									"    pm.expect(jsonData.data.downloadUrl).to.be.a('string');",
									"    pm.expect(jsonData.data.downloadUrl).to.include('http');",
									"});",
									"",
									"pm.test('Response contains expiration info', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('expiresIn');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
