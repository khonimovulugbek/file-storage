				{
					"name": "Upload File",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.fileId) {",
									"        pm.collectionVariables.set('file_id', response.data.fileId);",
									"        console.log('File ID saved:', response.data.fileId);",
									"    }",
									"}",
									"",
									"pm.test('Status code is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has success flag', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test('Response contains file data', function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('fileId');",
									"    pm.expect(jsonData.data).to.have.property('fileName');",
									"    pm.expect(jsonData.data).to.have.property('checksum');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
